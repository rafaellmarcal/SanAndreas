@using (Html.BeginForm("Calcular", "Encomenda", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row justify-content-md-center pt-5">
        <div class="col-md-auto">
            <div class="form-group">
                <label>Encomenda(s) - Calcular Rotas</label>
                <input type="file" name="encomendas" class="form-control-file" accept="text/plain" />
            </div>
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-md-auto">
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Calcular</button>
            </div>
        </div>
    </div>
}
