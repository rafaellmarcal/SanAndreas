@using (Html.BeginForm("Atualizar", "Trecho", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row justify-content-md-center pt-5">
        <div class="col-md-auto">
            <div class="form-group">
                <label>Atualizar Trecho(s)</label>
                <input type="file" name="trechos" class="form-control-file" accept="text/plain" />
            </div>
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-md-auto">
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Atualizar</button>
            </div>
        </div>
    </div>
}
